{
  "name": "@drinkspiller/shelf-pack-ts",
  "description": "A 2D rectangular bin packing data structure that uses the Shelf Best Height Fit heuristic. TypeScript fork of @mapbox/shelf-pack.",
  "version": "3.2.0",
  "module": "dist/shelf-pack.esm.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "author": {
    "name": "Bryan Housel",
    "email": "bryan@mapbox.com",
    "url": "https://github.com/bhousel"
  },
  "contributors": [
    {
      "name": "Skye Giordano",
      "url": "https://github.com/drinkspiller"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drinkspiller/shelf-pack.git-ts",
    "directory": "Forked from: https://github.com/mapbox/shelf-pack-ts"
  },
  "keywords": [
    "bin packing",
    "sprite"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.7.5",
    "benchmark": "^2.1.4",
    "bin-pack": "1.0.2",
    "coveralls": "^3.1.1",
    "documentation": "^14.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "rollup-plugin-copy": "^3.5.0",
    "tap": "^21.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "bench": "npm run build && node bench/bench.js",
    "build": "npm run generate-types; npx rollup -c rollup.config.mjs",
    "dev": "npx nodemon rollup -c rollup.config.mjs",
    "generate-types": "npx tsc --emitDeclarationOnly --outDir dist --declaration true src/index.ts",
    "lint": "npx eslint .",
    "fix": "npx eslint . --fix",
    "test": "npm run build && npm run lint && tap --cov test/*.js",
    "compile": "tsc",
    "prepare": "npm run compile",
    "prebuild": "rm -rf dist/*",
    "predev": "rm -rf dist/*",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "files": [
    "dist"
  ]
}
